<div class="container" style="margin-top:70px">
    <form action="/houses/update" method="post">
        <div class="form-group">
            <label>Item Name</label>
            <input type="text" name="item_name" value="<%= house.item_name %>" class="form-control">
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" name="description" value="<%= house.description %>" class="form-control">
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="number" name="price" value="<%= house.price %>" class="form-control">
        </div>
        <div class="field">
            <label>Rename Picture ID</label>
            <input name="picture_id" type="text" placeholder="picture_id" value="<%= house.picture_id %>" />
        </div>
        <input type="hidden" value="<%= house.picture %>" name="image">
        <input type="hidden" value="<%= house.picture_id %>" name="old_id">
        <button>Submit</button>
    </form>
</div>