<div class="row">
<% houses.forEach((house)=>{ %>
    <div class="col s6 m3 eq5 frik">
        <div class="card sticky-action">
            <div class="card-image">
                <div class="overlay waves-effect waves-light">
                   <a href="#">
                        <img src="<%= house.picture %>">
                        <span class="card-title amber-text text-darken-3">
                            <i class="icon ion-android-star"></i>
                            <i class="icon ion-android-star"></i>
                            <i class="icon ion-android-star"></i>
                            <i class="icon ion-android-star-half"></i>
                            <i class="icon ion-android-star-outline"></i>
                        </span>
                   </a>
                </div>
            </div>
            <div class="card-content">
                <p><%= house.item_name %></p>
                <span class="card-title activator grey-text text-darken-4" style="margin-top:30px">
                    <i class="icon ion-android-more-vertical right" style="padding-top:20px"></i></span>
                <!--<p><a href="#">This is a link</a></p>-->
            </div>
            <div class="card-action">
                <a href="/add-to-cart/<%= house._id %>" class="like waves-effect pink-text text-darken-2"><i
                        class="icon ion-android-favorite left"></i></a>
                <span class="right">Starting at <b>â‚¦<%= house.price %></b></span>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">Description<i
                        class="icon ion-ios-close-outline right"></i></span>
                <p><%= house.description %></p>
            </div>
        </div>
    </div>
<% }) %>
</div>