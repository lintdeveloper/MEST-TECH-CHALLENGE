<nav class="white">
    <div class="nav-wrapper container">
        <a href="/" class="brand-logo left">
            <i class="left ion ion-arrow-shrink" style="color: turquoise"></i> Byarent
        </a>
        <ul class="right">
            <% if((user.email === "musa@gmail.com")){ %>
                <li><a href="/houses/new"> <span style="font-size:2.5rem">+</span></a></li>
            <% } else { %>
                <li><a href="/houses" class="hide-on-small-only waves-effect">Browse homes</a></li>
                <li><a href="/cart" class="btn hide-on-small-only waves-effect"><span style="color:turquoise">
                        MY CART 
                        <% if(typeof session.cart === "undefined"){ %>
                            0
                        <% } else {%>
                            <%= session.cart.totalQty %>
                        <% }%>
                    </a>
                </li>
            <%}%>
            
            <li><a href="/logout" class="waves-effect" style="color:#2fb8ad">Logout</a></li>
        </ul>
