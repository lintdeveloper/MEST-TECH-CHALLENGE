<div style='padding-left:10%; padding-right: 10%'>

    <% if((user.email === "musa@gmail.com")){ %>
        <table class="highlight centered" style="margin-top: 30px">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Picture</th>
                    <th>Price</th>
                </tr>
            </thead>
        
            <tbody>
                <% houses.forEach((house, index)=>{ %>
                    <tr>
                        <td><%= house.item_name %></td>
                        <td><img src="<%= house.picture %>" alt="house_image"  style="height:40%; width: 30%; border-radius: 15px" ></td>
                        <td><%= house.price %></td>
                        <td>
                            <a href="#" class="btn waves-effect waves-light turquoise" style="border-radius: 12px">Update</a>
                            <form action="/houses/delete" method="POST" style="margin-top: 15px" id="delete_form<%= index %>">
                                <input type="hidden" name="picture_id" value="<%= house.picture_id %>">
                                <a onclick="document.getElementById('delete_form<%= index %>').submit(); return false;" class="btn waves-effect red" style="border-radius: 12px">
                                    </i> Remove
                                </a>
                            </form>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        
        
    <% } %>

    